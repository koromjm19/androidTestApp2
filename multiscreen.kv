<P>:
    Label:
        text: "Incorrect Password"
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"
    password: password
    GridLayout:
        cols:1
        GridLayout:
            cols:2

            Label:
                text: "Password: "
            TextInput:
                id: password
                multiline: False
        Button:
            text: "Submit"
            on_release:
                app.root.current = "second" if password.text == "1" else root.btn()
                root.manager.transition.direction = "left"
                root.clear()

<SecondWindow>:
    name: "second"
    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"